<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <stroke android:width="1dip" android:color="@color/colorUnreadNotificationPressed" />
            <solid android:color="@color/colorUnreadNotificationPressed"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <stroke android:width="1dip" android:color="@color/colorUnreadNotification" />
            <solid android:color="@color/colorUnreadNotification"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <solid android:color="@color/colorAccent"/>
            <stroke android:width="1dp" android:color="@color/colorAccent"/>
        </shape>
    </item>
</selector>