 <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:clickable="true"
    tools:context="com.fishpott.fishpott5.Fragments.Signup.SignupPersonalStage2Fragment">


     <androidx.constraintlayout.widget.Guideline
        android:id="@+id/fragment_signup_personalstage2_guideline_v_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.15" />

     <androidx.constraintlayout.widget.Guideline
        android:id="@+id/fragment_signup_personalstage2_guideline_v_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.15" />


     <androidx.constraintlayout.widget.Guideline
        android:id="@+id/fragment_signup_personalstage2_guideline_v_11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25" />

     <androidx.constraintlayout.widget.Guideline
        android:id="@+id/fragment_signup_personalstage2_guideline_v_12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75" />

     <androidx.constraintlayout.widget.Guideline
        android:id="@+id/fragment_signup_personalstage2_guideline_v_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.43" />

     <androidx.constraintlayout.widget.Guideline
        android:id="@+id/fragment_signup_personalstage2_guideline_v_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

     <androidx.constraintlayout.widget.Guideline
        android:id="@+id/fragment_signup_personalstage2_guideline_v_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.60" />

     <androidx.constraintlayout.widget.Guideline
        android:id="@+id/fragment_signup_personalstage2_guideline_v_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

     <androidx.constraintlayout.widget.Guideline
        android:id="@+id/fragment_signup_personalstage2_guideline_v_7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.88" />

     <androidx.constraintlayout.widget.Guideline
        android:id="@+id/fragment_signup_personalstage2_guideline_v_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.35" />

     <androidx.constraintlayout.widget.Guideline
        android:id="@+id/fragment_signup_personalstage2_guideline_v_9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.65" />

     <androidx.constraintlayout.widget.Guideline
        android:id="@+id/fragment_signup_personalstage2_guideline_v_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.85" />

     <androidx.constraintlayout.widget.Guideline
        android:id="@+id/fragment_signup_personalstage2_guideline_h_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.13" />

     <androidx.constraintlayout.widget.Guideline
        android:id="@+id/fragment_signup_personalstage2_guideline_h_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.22" />

     <androidx.constraintlayout.widget.Guideline
        android:id="@+id/fragment_signup_personalstage2_guideline_h_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.30" />

     <androidx.constraintlayout.widget.Guideline
        android:id="@+id/fragment_signup_personalstage2_guideline_h_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.45" />

     <androidx.constraintlayout.widget.Guideline
        android:id="@+id/fragment_signup_personalstage2_guideline_h_11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.47" />

     <androidx.constraintlayout.widget.Guideline
        android:id="@+id/fragment_signup_personalstage2_guideline_h_9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.7" />

     <androidx.constraintlayout.widget.Guideline
        android:id="@+id/fragment_signup_personalstage2_guideline_h_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.55" />

     <androidx.constraintlayout.widget.Guideline
        android:id="@+id/fragment_signup_personalstage2_guideline_h_7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.93" />

     <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fragment_signup_personalstage2_constraint_layout_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorPrimaryTitleBar"
        app:layout_constraintBottom_toTopOf="@+id/fragment_signup_personalstage2_guideline_h_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


         <androidx.constraintlayout.widget.Guideline
            android:id="@+id/fragment_signup_personalstage2_constraint2_guideline_v_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.15" />

         <androidx.constraintlayout.widget.Guideline
            android:id="@+id/fragment_signup_personalstage2_constraint2_guideline_v_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.60" />

        <TextView
            android:id="@+id/fragment_signup_personalstage2_constraint2_title_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:gravity="center"
            android:text="@string/fragment_signup_personalstage2_birth_day_country"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/fragment_signup_personalstage2_constraint_layout_2"
            app:layout_constraintStart_toStartOf="@+id/fragment_signup_personalstage2_constraint2_guideline_v_3"
            app:layout_constraintTop_toTopOf="@+id/fragment_signup_personalstage2_constraint_layout_2" />

        <ImageView
            android:id="@+id/fragment_signup_personalstage2_back_imageview"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="12dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:contentDescription="@string/none"
            android:tint="@color/colorAccent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/fragment_signup_personalstage2_constraint2_guideline_v_3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/forgot_password_arrow_back" />
     </androidx.constraintlayout.widget.ConstraintLayout>


    <Button
        android:id="@+id/fragment_signup_personalstage2_continue_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/start_a_fishpott_acc_button_background"
        android:text="@string/fragment_signup_personalstage1_continue"
        android:textColor="@drawable/black_button_pressed_white_color"
        app:layout_constraintBottom_toTopOf="@+id/fragment_signup_personalstage2_guideline_h_7"
        app:layout_constraintEnd_toStartOf="@+id/fragment_signup_personalstage2_guideline_v_12"
        app:layout_constraintStart_toStartOf="@+id/fragment_signup_personalstage2_guideline_v_11"
        app:layout_constraintTop_toTopOf="@+id/fragment_signup_personalstage2_guideline_h_9" />

    <TextView
        android:id="@+id/fragment_signup_personalstage2_date_month_textview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/fragment_signup_personalstage1_textview_background_with_borders"
        android:gravity="center"
        android:text="@string/fragment_signup_personalstage1_month"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/fragment_signup_personalstage2_guideline_h_5"
        app:layout_constraintEnd_toStartOf="@+id/fragment_signup_personalstage2_guideline_v_8"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/fragment_signup_personalstage2_guideline_v_1"
        app:layout_constraintTop_toTopOf="@+id/fragment_signup_personalstage2_guideline_h_8"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/fragment_signup_personalstage2_date_day_textview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:gravity="center"
        android:text="@string/fragment_signup_personalstage1_day"
        android:background="@drawable/fragment_signup_personalstage1_textview_background_with_borders"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/fragment_signup_personalstage2_guideline_h_5"
        app:layout_constraintEnd_toStartOf="@+id/fragment_signup_personalstage2_guideline_v_9"
        app:layout_constraintStart_toStartOf="@+id/fragment_signup_personalstage2_guideline_v_8"
        app:layout_constraintTop_toTopOf="@+id/fragment_signup_personalstage2_guideline_h_8" />

    <TextView
        android:id="@+id/fragment_signup_personalstage2_date_year_textview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/fragment_signup_personalstage1_textview_background_with_borders"
        android:gravity="center"
        android:text="@string/fragment_signup_personalstage1_year"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/fragment_signup_personalstage2_guideline_h_5"
        app:layout_constraintEnd_toStartOf="@+id/fragment_signup_personalstage2_guideline_v_10"
        app:layout_constraintHorizontal_bias="0.312"
        app:layout_constraintStart_toStartOf="@+id/fragment_signup_personalstage2_guideline_v_9"
        app:layout_constraintTop_toTopOf="@+id/fragment_signup_personalstage2_guideline_h_8"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/fragment_signup_personalstage2_date_of_birth_label_textview"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="@string/fragment_signup_personalstage1_date_of_birth"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/fragment_signup_personalstage2_guideline_h_8"
        app:layout_constraintStart_toStartOf="@+id/fragment_signup_personalstage2_guideline_v_1"
        app:layout_constraintTop_toTopOf="@+id/fragment_signup_personalstage2_guideline_h_4" />

    <TextView
        android:id="@+id/fragment_signup_personalstage2_country_label_textview"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="@string/fragment_signup_personalstage1_country"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/fragment_signup_personalstage2_guideline_h_6"
        app:layout_constraintStart_toStartOf="@+id/fragment_signup_personalstage2_guideline_v_1"
        app:layout_constraintTop_toTopOf="@+id/fragment_signup_personalstage2_guideline_h_11"
        app:layout_constraintVertical_bias="0.7" />

    <TextView
        android:id="@+id/fragment_signup_personalstage2_country_textview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="@string/fragment_signup_personalstage1_country"
        android:textAlignment="center"
        android:background="@drawable/fragment_signup_personalstage1_textview_background_with_borders"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/fragment_signup_personalstage2_guideline_h_9"
        app:layout_constraintEnd_toStartOf="@+id/fragment_signup_personalstage2_guideline_v_10"
        app:layout_constraintStart_toStartOf="@+id/fragment_signup_personalstage2_guideline_v_1"
        app:layout_constraintTop_toTopOf="@+id/fragment_signup_personalstage2_guideline_h_6" />

 </androidx.constraintlayout.widget.ConstraintLayout>
