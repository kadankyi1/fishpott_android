<?xml version="1.0" encoding="utf-8"?>
 <androidx.constraintlayout.widget.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:clickable="true"
    tools:context="com.fishpott.fishpott5.Fragments.SharesToolBoxFragment" android:focusable="true">

        <include layout="@layout/show_fragments" />

         <androidx.viewpager.widget.ViewPager
            android:id="@+id/mViewpager_ID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

     <androidx.constraintlayout.widget.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

         <androidx.constraintlayout.widget.design.widget.TabLayout
            android:id="@+id/mTab_ID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="#b5c4d2" />

     </androidx.constraintlayout.widget.design.widget.AppBarLayout>

 </androidx.constraintlayout.widget.design.widget.CoordinatorLayout>

