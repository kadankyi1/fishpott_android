<?xml version="1.0" encoding="utf-8"?>
 <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/colorAccent"
    android:id="@+id/chat_list_root_constraintlayout">

    <com.fishpott.fishpott5.Views.CircleImageView
        android:id="@+id/chat_pott_picture_circleimageview"
        android:layout_width="@dimen/list_item_suggestedlinkupsactivity_activity_pottpic_imageview_width_size"
        android:layout_height="@dimen/list_item_suggestedlinkupsactivity_activity_pottpic_imageview_width_size"
        android:contentDescription="@string/none"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.39"
        android:src="@drawable/setprofilepicture_activity_imageholder_default_image"
        app:civ_border_color="@android:color/transparent"
        app:civ_border_width="0dp" />

    <TextView
        android:id="@+id/chat_pottname_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="@string/test_pottname_testpottnameraylight"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/chat_pott_picture_circleimageview"
        app:layout_constraintStart_toEndOf="@+id/chat_pott_picture_circleimageview"
        app:layout_constraintTop_toTopOf="@+id/chat_pott_picture_circleimageview"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/last_message_text_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="@string/sample_chat_message"
        android:textColor="@color/colorAccentAsh"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/chat_pott_picture_circleimageview"
        app:layout_constraintTop_toBottomOf="@id/chat_pottname_textview"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/chat_date_textview"
        android:layout_width="wrap_content"
        android:layout_height="18sp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="8dp"
        android:text="@string/chat_date_sample"
        android:textColor="@color/colorAccentAsh"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/chat_pottname_textview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toEndOf="@+id/chat_pottname_textview"
        app:layout_constraintTop_toTopOf="@+id/chat_pottname_textview"
        app:layout_constraintVertical_bias="0.0" />

    <View
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/colorAccentGray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/chat_pott_picture_circleimageview" />


 </androidx.constraintlayout.widget.ConstraintLayout>
