<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="@color/colorAccent">

    <RelativeLayout
        android:id="@+id/profile_picture_holder_relativelayout"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.39">

        <com.fishpott.fishpott5.Views.CircleImageView
            android:id="@+id/notification_pott_picture_circleimageview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/none"
            android:src="@drawable/setprofilepicture_activity_imageholder_default_image"
            app:civ_border_color="@android:color/transparent"
            app:civ_border_width="0dp" />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/notification_icon_holder_constraintlayout"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/list_item_news_type_28_up4sale_circle_background">

            <ImageView
                android:id="@+id/notification_icon_circleimageview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:contentDescription="@string/none"
                android:src="@drawable/upforsale_icon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </android.support.constraint.ConstraintLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/notification_infotext_textview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:gravity="bottom"
        android:text="@string/notification_text"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/notification_date_textview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/profile_picture_holder_relativelayout"
        app:layout_constraintTop_toTopOf="@+id/profile_picture_holder_relativelayout"
        app:layout_constraintVertical_bias="0.6"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/notification_date_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="@string/notification_date"
        android:textColor="@color/colorDateText"
        android:textSize="@dimen/list_item_suggestedlinkupsactivity_activity_linkup_buttontext_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/profile_picture_holder_relativelayout"
        app:layout_constraintTop_toBottomOf="@id/notification_infotext_textview"
        app:layout_constraintVertical_bias="0.79" />

</android.support.constraint.ConstraintLayout>
