<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_signupbusinessstage1_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:clickable="true"
    tools:context="com.fishpott.fishpott5.Fragments.Signup.SignupBusinessStage1Fragment">


    <android.support.constraint.Guideline
        android:id="@+id/fragment_signup_businessstage1_guideline_v_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <android.support.constraint.Guideline
        android:id="@+id/fragment_signup_businessstage1_guideline_v_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.15" />

    <android.support.constraint.Guideline
        android:id="@+id/fragment_signup_businessstage1_guideline_v_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.43" />

    <android.support.constraint.Guideline
        android:id="@+id/fragment_signup_businessstage1_guideline_v_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <android.support.constraint.Guideline
        android:id="@+id/fragment_signup_businessstage1_guideline_v_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.60" />

    <android.support.constraint.Guideline
        android:id="@+id/fragment_signup_businessstage1_guideline_v_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <android.support.constraint.Guideline
        android:id="@+id/fragment_signup_businessstage1_guideline_v_7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.88" />

    <android.support.constraint.Guideline
        android:id="@+id/fragment_signup_businessstage1_guideline_v_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.35" />

    <android.support.constraint.Guideline
        android:id="@+id/fragment_signup_businessstage1_guideline_v_9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.65" />

    <android.support.constraint.Guideline
        android:id="@+id/fragment_signup_businessstage1_guideline_v_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <android.support.constraint.Guideline
        android:id="@+id/fragment_signup_businessstage1_guideline_h_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.08" />

    <android.support.constraint.Guideline
        android:id="@+id/fragment_signup_businessstage1_guideline_h_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.35" />

    <android.support.constraint.Guideline
        android:id="@+id/fragment_signup_businessstage1_guideline_h_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.47" />

    <android.support.constraint.Guideline
        android:id="@+id/fragment_signup_businessstage1_guideline_h_9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.75" />

    <android.support.constraint.Guideline
        android:id="@+id/fragment_signup_businessstage1_guideline_h_7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.59" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/fragment_signup_businessstage1_constraint_layout_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorPrimaryTitleBar"
        app:layout_constraintBottom_toTopOf="@+id/fragment_signup_businessstage1_guideline_h_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <android.support.constraint.Guideline
            android:id="@+id/fragment_signup_businessstage1_constraint2_guideline_v_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.15" />

        <android.support.constraint.Guideline
            android:id="@+id/fragment_signup_businessstage1_constraint2_guideline_v_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.60" />

        <TextView
            android:id="@+id/fragment_signup_businessstage1_constraint2_title_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:gravity="center"
            android:text="@string/fragment_signup_businessstage1_business_name_and_location"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/fragment_signup_businessstage1_constraint_layout_2"
            app:layout_constraintStart_toStartOf="@+id/fragment_signup_businessstage1_constraint2_guideline_v_3"
            app:layout_constraintTop_toTopOf="@+id/fragment_signup_businessstage1_constraint_layout_2" />

        <ImageView
            android:id="@+id/fragment_signup_businessstage1_back_imageview"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="12dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:contentDescription="@string/none"
            android:tint="@color/colorAccent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/fragment_signup_businessstage1_constraint2_guideline_v_3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/forgot_password_arrow_back" />
    </android.support.constraint.ConstraintLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/fragment_signup_businessstage1_businessname_edit_text_layout_holder"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:theme="@style/loginActivityHintStyle"
        app:layout_constraintBottom_toTopOf="@+id/fragment_signup_businessstage1_guideline_h_3"
        app:layout_constraintEnd_toStartOf="@+id/fragment_signup_businessstage1_guideline_v_4"
        app:layout_constraintStart_toStartOf="@+id/fragment_signup_businessstage1_guideline_v_1"
        app:layout_constraintTop_toTopOf="@+id/fragment_signup_businessstage1_guideline_h_2">

        <EditText
            android:id="@+id/fragment_signup_businessstage1_businessname_edit_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/fragment_signup_businessstage1_business_name"
            android:inputType="text"
            android:labelFor="@id/fragment_signup_businessstage1_businessname_edit_text"
            android:maxLength="50"
            android:textColor="@drawable/login_activity_input_text_color" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/fragment_signup_businessstage1_businesslocation_edit_text_layout_holder"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:theme="@style/loginActivityHintStyle"
        app:layout_constraintBottom_toTopOf="@+id/fragment_signup_businessstage1_guideline_h_7"
        app:layout_constraintEnd_toStartOf="@+id/fragment_signup_businessstage1_guideline_v_6"
        app:layout_constraintStart_toStartOf="@+id/fragment_signup_businessstage1_guideline_v_1"
        app:layout_constraintTop_toBottomOf="@+id/fragment_signup_businessstage1_guideline_h_3">

        <EditText
            android:id="@+id/fragment_signup_businessstage1_businesslocation_edit_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/fragment_signup_businessstage1_branch_location"
            android:inputType="text"
            android:labelFor="@id/fragment_signup_businessstage1_businesslocation_edit_text"
            android:maxLength="50"
            android:textColor="@drawable/login_activity_input_text_color" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/fragment_signup_businessstage1_businessemail_edit_text_layout_holder"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:theme="@style/loginActivityHintStyle"
        app:layout_constraintBottom_toTopOf="@+id/fragment_signup_businessstage1_guideline_h_3"
        app:layout_constraintEnd_toStartOf="@+id/fragment_signup_businessstage1_guideline_v_6"
        app:layout_constraintStart_toStartOf="@+id/fragment_signup_businessstage1_guideline_v_4"
        app:layout_constraintTop_toTopOf="@+id/fragment_signup_businessstage1_guideline_h_2">

        <EditText
            android:id="@+id/fragment_signup_businessstage1_businessemail_edit_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/fragment_signup_businessstage1_business_email"
            android:inputType="textEmailAddress"
            android:labelFor="@id/fragment_signup_businessstage1_businessemail_edit_text"
            android:maxLength="50"
            android:textColor="@drawable/login_activity_input_text_color" />

    </android.support.design.widget.TextInputLayout>


    <Button
        android:id="@+id/fragment_signup_businessstage1_continue_button"
        android:layout_width="0dp"
        android:layout_height="@dimen/button_height"
        android:textSize="@dimen/button_text_size"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/start_a_fishpott_acc_button_background"
        android:text="@string/fragment_signup_personalstage1_continue"
        android:textColor="@drawable/black_button_pressed_white_color"
        app:layout_constraintBottom_toTopOf="@+id/fragment_signup_businessstage1_guideline_h_7"
        app:layout_constraintEnd_toStartOf="@+id/fragment_signup_businessstage1_guideline_v_7"
        app:layout_constraintStart_toStartOf="@+id/fragment_signup_businessstage1_guideline_v_2"
        app:layout_constraintTop_toTopOf="@+id/fragment_signup_businessstage1_guideline_h_9" />

</android.support.constraint.ConstraintLayout>
